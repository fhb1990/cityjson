{
  "type": "CityJSON_Extension",
  "name": "Road Network",
  "uri": "https://github.com/fhb1990/cityjson/blob/master/schema/v09/extensions/roadnetwork.json",
  "version": "0.1",
  "description": "CityJSON encoding for CityGML Road Transportation network",

  "extraRootProperties": {},

  "extraAttributes": {
  	"Road": {
  		"+startNode": {
  			"type": "string",
  			"description": "ID of startNode"
  		},
  		"+endNode": {
  			"type": "string",
  			"description": "ID of endNode"
  		},
  		"+maxSpeed": {
  			"type": "number"
  		},
  		"+mode": {
  			"type": "string"
  		},
  		"+lanes": {
  			"type": "number"
  		},
  		"+drivingDirection": {
  			"type": "string", "enum": ["toEnd", "toStart", "both"]
  		}

  	}
  },

  "extraCityObjects": {
  	"+RoadNode": {
  		"allOf": [
  			{"$ref": "../cityobjects.schema.json#/Node"},
  			{"properties": {
  				"type": { "enum": ["+RoadNode"] },
  				"toplevel": {"type": "boolean"},
  				"turn_table" /// HOW TO LINK TO NUMBER OF LINKS PRESENT? SET RESTRICTIONS?

  			}
  		}

  		]
  	}
  }
}