{
  "type": "CityJSON_Extension",
  "name": "Road Network",
  "uri": "https://github.com/fhb1990/cityjson/blob/master/schema/v09/extensions/roadnetwork.json",
  "version": "0.1",
  "description": "CityJSON encoding for CityGML Road Transportation network",

  "extraRootProperties": {},

  "extraAttributes": {
  	"RoadSegment": {
  		"+roadType": {
  			"enum": ["Road", "Connecting", "Roundabout"] 
  		},
  		"+startNode": {
  			"type": "string",
  			"description": "ID of startNode"
  		},
  		"+endNode": {
  			"type": "string",
  			"description": "ID of endNode"
  		},
  		"+maxSpeed": {
  			"type": "number"
  		},
  		"+mode": {
  			"type": "string"
  		},
  		"+lanes": {
  			"type": "number"
  		},
  		"+drivingDirection": {
  			"enum": ["toEnd", "toStart", "both"]
  		}
  	}
  },

  "extraCityObjects": {
  	"+RoadNode": {
  		"allOf": [
  			{"$ref": "../cityobjects.schema.json#/Node"},
  			{"properties": {
  				"type": { "enum": ["+RoadNode"] },
  				"attributes": {
  					"type": "object",
  					"properties": {
  						"roadNodeType": {"enum": ["Intersection", "Roundabout", "LaneSplit", "Attribute"]},
  						"turns": {
  							"type": "array",
  							"items": {
  								"type": "array",
  								"items": {"enum": [0,1]}
  							}
  						}
  					}
  				}

  			}
  		}
  		]
  	},
  	"+Road": {
  		"allOf": [
  			{"$ref": "../cityobjects.schema.json#/CityObjectGroup"}
  		]
  	}

  }
}